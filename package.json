{
  "name": "@icc/ui",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build icc",
    "build:lib:scss": "scss-bundle -c ./scss-bundle.config.json",
    "watch": "ng build icc --watch --configuration development",
    "format:check": "prettier --list-different 'projects/**/*{.ts,.js,.json,.css,.scss,.html}'",
    "test": "ng test",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.6",
    "@angular/cdk": "^19.0.5",
    "@angular/common": "^19.0.6",
    "@angular/compiler": "^19.0.6",
    "@angular/core": "^19.0.6",
    "@angular/forms": "^19.0.6",
    "@angular/platform-browser": "^19.0.6",
    "@angular/platform-browser-dynamic": "^19.0.6",
    "@angular/router": "^19.0.6",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@ngrx/effects": "^19.0.0",
    "@ngrx/operators": "^19.0.0",
    "@ngrx/router-store": "^19.0.0",
    "@ngrx/schematics": "^19.0.0",
    "@ngrx/store": "^19.0.0",
    "@ngx-translate/core": "^16.0.4",
    "@types/d3": "^7.4.3",
    "d3": "^7.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.7",
    "@angular/cli": "^19.0.7",
    "@angular/compiler-cli": "^19.0.6",
    "@ngrx/store-devtools": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "angular-in-memory-web-api": "^0.19.0",
    "husky": "^9.1.6",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.10",
    "ng-packagr": "^19.0.1",
    "prettier": "^3.3.3",
    "sass": "^1.83.1",
    "scss-bundle": "^3.1.2",
    "typescript": "~5.5.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "projects/**/*.ts": [
      "prettier --write --print-width 120",
      "git add"
    ]
  }
}
